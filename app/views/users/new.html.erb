<h2>Sign Up</h2>
<%= form_for (@user, :html=>{:multipart=>true} ) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
  <%= f.label :fullname %><br>
  <%= f.text_field :fullname %>
  </div>
  <div class="field">
  <%= f.label :login %><br>
  <%= f.text_field :login %>
  </div>
  <div class="field">
  <%= f.label :mail %><br>
  <%= f.text_field :mail %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :image_file %>
  </div>
  <div class="field">
  <%= f.label :facebookid %><br>
  <%= f.text_field :facebookid %>
  </div>
  <div class="field">
  <%= f.label :password %><br>
  <%= f.password_field :password %>
  </div>
  <div class="field">
  <%= f.label :password_confirmation %><br>
  <%= f.password_field :password_confirmation %>
  </div>
  <div class="action"><%= f.submit %></div>
<% end %>
<%= link_to "Back", :back %>
