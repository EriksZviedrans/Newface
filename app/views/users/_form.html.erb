    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :mail %><br />
    <%= f.text_field :mail %>
  </div>
  <div class="field">
    <%= f.label :avatar %><br />
    <%= f.file_field :image_file %>
  </div>
  <div class="field">
    <%= f.label :facebookid %><br />
    <%= f.text_field :facebookid %>
  </div>
  <div class="field">
    <%= f.label :access_token %><br />
    <%= f.text_area :access_token, :size => '34x5' %>
