  <%= raw image_tag("/code_image/#{@user.id}", :alt => "avatar", :size => "200x200") %>
  <div id="details">
      <h2><br><%= @user.fullname %></br></h2>
      <br><%= @user.login %></br>
      <br><%= @user.mail %></br>
      <br><%= render 'events' %></br>
  </div>
      <br /><% if current_user.id != @user.id %>
              <% if $request  %>
                <%= label_tag 'Request sent!' %>
              <% elsif @status.nil? %>
                <%= link_to 'Invite', invite_friend_path(@user), :remote => true %>
              <% else %>
                <%= label_tag 'My Friend!' %>
              <% end %>
            <% end %>


