<h2>Requested Friendships(<%= invite_request.count %>):</h2>
<ul>
<% invite_request.each do |i| %>
<li class="item-a" ><strong><%= link_to User.find(i.id_user).fullname, user_path(i.id_user) %></strong>
<%= link_to 'Accept',{:controller => "users", :action => "accept", :id => i.id_user}, :class => "accept", :remote => true %>
<%= link_to 'Decline' %></li>
<% end %>
</ul>
<input type='button', id='button'>

